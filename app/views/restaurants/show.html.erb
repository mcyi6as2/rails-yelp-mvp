<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.restaurant.name %> rated <%= review.rating %> comments: <%= review.content %></li>
  <% end %>
</ul>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @restaurant.phone_number %>
</p>

<%= link_to 'Back', restaurants_path %>
